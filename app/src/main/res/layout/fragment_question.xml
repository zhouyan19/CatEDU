<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="604dp"
        android:layout_marginEnd="8dp"
        android:gravity="center_horizontal"
        android:text="@string/question_text"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_retrieval"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_margin="30dp"
        android:text="@string/entity_retrieval"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="36sp"/>

    <Button
        android:id="@+id/btn_link"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_margin="30dp"
        android:text="@string/entity_link"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_retrieval"
        android:textSize="36sp"/>

    <Button
        android:id="@+id/btn_qa"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_margin="30dp"
        android:text="@string/entity_qa"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_link"
        android:textSize="36sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>