<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/selfie"
        android:background="@drawable/cat_edu"
        ></ImageView>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/selfie"
        android:layout_marginTop="10dp"
        android:background="#000000"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:paddingTop="10dp"
        android:id="@+id/login_textView"

        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/selfie"
        app:layout_constraintTop_toTopOf="@id/selfie"
        app:layout_constraintBottom_toBottomOf="@id/selfie"
        android:text="@string/me"
        android:textSize="50sp"
        ></TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/selfie"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="50sp"
        android:text="@string/settings"
        android:paddingLeft="50dp"
        android:layout_marginTop="20dp"
        ></TextView>

</androidx.constraintlayout.widget.ConstraintLayout>