<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android" >

    <!--    这里是Linearlayout布局的背景颜色-->
    <solid android:color="#FFFFFF" />

    <!--    这里是设置边框线的粗细和颜色-->
    <stroke
        android:width="1dp"
        android:color="#FE8D31" />

    <!--    这里是设置四周的空白-->
    <padding
        android:bottom="10dp"
        android:left="10dp"
        android:right="10dp"
        android:top="10dp" />

    <!--    这里是设置四周圆角半径-->
    <corners android:radius="4dp" />

</shape>